<Window x:Class="Sistema_de_Ventas.Views.Splash_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Ventas.Views"
        
        xmlns:hc="https://handyorg.github.io/handycontrol" 
        
        WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Foreground="Black" FontFamily="Segoe UI" AllowsTransparency="True" Background="Transparent"
        
        mc:Ignorable="d"
        Title="Splash_Screen" Height="450" Width="800">
    <Grid>
        <Border CornerRadius="40">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF999999" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="VentaFácil" FontSize="72" TextAlignment="Center"/>
                <TextBlock Text="Sistema de Control de Ventas" TextAlignment="Center" FontSize="20" FontFamily="Segoe UI Light"/>
                <ProgressBar x:Name="BarraProgreso" FontSize="7" Height="7" Background="Transparent" BorderBrush="Transparent" Foreground="#FF007BFF"/>
            </StackPanel>
        </Border>
        <Grid Margin="20">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image Source="/Resources/Logo/VeltrixLogoComplete-removebg-preview.png" Height="100"/>
            </StackPanel>
        </Grid>
        <Label x:Name="derechosReservados" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="30" Foreground="Black">
            <Label.BorderBrush>
                <SolidColorBrush Color="#FFE0E0E0" Opacity="0"/>
            </Label.BorderBrush>
            <Label.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Label.Background>
        </Label>

    </Grid>
</Window>
