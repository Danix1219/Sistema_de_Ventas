<Page x:Class="Sistema_de_Ventas.Views.Ventas.Ventas_Screen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Background="#F8F9FA"
      FontFamily="Segoe UI"
      Foreground="#222"
      d:DesignHeight="700" d:DesignWidth="1100"
      Title="Ventas_Screen">

    <Page.Resources>
        <!-- Sombra reutilizable -->
        <DropShadowEffect x:Key="AppDropShadow"
                          Color="Black"
                          BlurRadius="12"
                          ShadowDepth="3"
                          Opacity="0.12"/>

        <!-- Degradado de azul para los headers -->
        <LinearGradientBrush x:Key="BlueGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#FF007BFF" Offset="0"/>
            <GradientStop Color="#FF0D519B" Offset="1"/>
        </LinearGradientBrush>

        <!-- Botón moderno (pill) -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="1.5" Opacity="0.06"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Border controla el CornerRadius -->
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.92"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Botón circular para íconos -->
        <Style x:Key="CircleIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22"
                                Padding="0"
                                Effect="{StaticResource AppDropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo de encabezados del DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource BlueGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Estilo de fila del DataGrid -->
        <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF7F7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para el panel de detalles -->
        <Style x:Key="DetailsPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Effect" Value="{StaticResource AppDropShadow}"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

        <!-- Icono de perfil -->
        <DrawingImage x:Key="ProfileIcon">
            <DrawingImage.Drawing>
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <EllipseGeometry Center="12,12" RadiusX="10" RadiusY="10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#FF007BFF" Offset="0"/>
                            <GradientStop Color="#FF0D519B" Offset="1"/>
                        </LinearGradientBrush>
                    </GeometryDrawing.Brush>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#FF0D519B" Thickness="1"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Page.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CABECERA: Icono de perfil + título centrado -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icono de perfil a la izquierda -->
            <Button Grid.Column="0" Style="{StaticResource CircleIconButtonStyle}" Background="Transparent" BorderBrush="#007BFF" BorderThickness="1" ToolTip="Perfil de usuario">
                <Image Source="{StaticResource ProfileIcon}" Width="24" Height="24"/>
            </Button>

            <!-- Título centrado -->
            <TextBlock Grid.Column="1" Text="VentaFácil" FontSize="22" FontWeight="Bold" Foreground="#333" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,44,0"/>
        </Grid>

        <!-- CONTENIDO PRINCIPAL -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="18" Effect="{StaticResource AppDropShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sub-encabezado y acciones -->
                <DockPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Historial de ventas" FontSize="18" FontWeight="SemiBold" Foreground="#444" VerticalAlignment="Center" DockPanel.Dock="Left"/>

                    <!-- Botones de acción a la derecha -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Button Style="{StaticResource CircleIconButtonStyle}" Background="#28a745" Foreground="White" ToolTip="Agregar venta">
                            <TextBlock Text="+" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>

                        <Button Style="{StaticResource CircleIconButtonStyle}" Background="#0078D7" Foreground="White" ToolTip="Imprimir reporte">
                            <TextBlock Text="🖨" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>

                        <Button Style="{StaticResource CircleIconButtonStyle}" Background="#6c757d" Foreground="White" ToolTip="Filtrar ventas">
                            <TextBlock Text="🔍" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!-- DataGrid estilizado -->
                <DataGrid x:Name="VentasDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          BorderThickness="0"
                          RowHeight="44"
                          Background="White"
                          Foreground="#222"
                          FontSize="13"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          RowStyle="{StaticResource DataGridRowStyle}" SelectionChanged="VentasDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID de Venta" Binding="{Binding IdVenta}" Width="*"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
                        <DataGridTextColumn Header="Hora" Binding="{Binding Hora}" Width="*"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="*"/>
                        <DataGridTemplateColumn Header="Acciones" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Ver" Click="VerDetallesButton_Click" Style="{StaticResource ModernButtonStyle}" Background="Transparent" Foreground="#DF0031" BorderThickness="0" Padding="6,2" Margin="0,0,6,0"/>
                                        <Button Content="Ticket" Style="{StaticResource ModernButtonStyle}" Background="#0078D7" Foreground="White" Padding="6,2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- PANEL DE DETALLES (inicialmente colapsado) -->
        <Border x:Name="DetailsPanel" Grid.Row="2" Style="{StaticResource DetailsPanelStyle}" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Encabezado de detalles -->
                <DockPanel Grid.Row="0" Margin="0,0,0,15">
                    <TextBlock Text="Detalles de Venta" FontSize="18" FontWeight="SemiBold" Foreground="#444" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <Button x:Name="CloseDetailsButton" Content="×" Click="CloseDetailsButton_Click" FontSize="20" Foreground="#777" Background="Transparent" BorderThickness="0" Padding="10,0" HorizontalAlignment="Right" DockPanel.Dock="Right" Cursor="Hand"/>
                </DockPanel>

                <!-- Información de la venta -->
                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Vertical">
                        <TextBlock Text="ID de Venta:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBlock x:Name="DetailIdVenta" Text="0001" Foreground="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="Fecha:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBlock x:Name="DetailFecha" Text="06/09/2025" Foreground="#333" Margin="0,0,0,15"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <TextBlock Text="Hora:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBlock x:Name="DetailHora" Text="12:16:00 p.m." Foreground="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="Total:" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                        <TextBlock x:Name="DetailTotal" Text="$1,270.37" Foreground="#333" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>

                <!-- Productos de la venta -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Productos" FontWeight="SemiBold" Foreground="#444" Margin="0,0,0,10"/>

                    <DataGrid x:Name="ProductosDataGrid"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="None"
                              BorderThickness="1"
                              BorderBrush="#D2D2D2"
                              RowHeight="32"
                              Background="White"
                              Foreground="#222"
                              FontSize="13">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="3*"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="*"/>
                            <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario}" Width="*"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>