<Window x:Class="Sistema_de_Ventas.Views.Nav_Screen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Ventas.Views"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol" 

        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize"
        Foreground="Black" FontFamily="Segoe UI" 
        WindowState="Maximized"
        Title="VentaFácil" Height="1080" Width="1920">

    <Grid Margin="10">
        <!-- Definimos 2 filas: 1 para el menú y 1 para el contenido -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <!-- Menú superior -->
            <RowDefinition Height="*"/>
            <!-- Contenido -->
        </Grid.RowDefinitions>

        <!-- Barra de navegación -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Width="30" Height="30" Margin="0,0,30,0" hc:BorderElement.CornerRadius="25" Cursor="Hand">
                <Button.Background>
                    <ImageBrush ImageSource="/Views/VeltrixLogo.jpg" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>

            <Button Click="Btn_Ventas_Click" Content="Ventas" Margin="0,0,10,0" Width="80" Height="30" hc:BorderElement.CornerRadius="15"/>
            <Button Click="Btn_Inventario_Click" Content="Inventario" Width="80" Height="30" hc:BorderElement.CornerRadius="15"/>
        </StackPanel>

        <!-- Frame para navegar entre páginas -->
        <Frame x:Name="MainFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Margin="10"/>


    </Grid>
</Window>
